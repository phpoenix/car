/* pages/service/index.wxss */
.main{
  width: 98%;
  background: #ccc;
  display: flex;
  flex-direction: column;
}

.logo{
  width: 100%;
  height: 360rpx;
  position: relative;
}

.logo:after{
  width: 100%;
  height: 100%;
  position: absolute;
  content: '';
  top: 0;
  left: 0;
  box-shadow:0 0 50px 30px #ffffff inset;
}

.logo>image{
  width: 100%;
  height: 100%;
  display: block;
  margin-bottom: 20px;
}

.content{
  width: 100%;
  background: #fff;
  display: flex;
  flex-direction: column;
}

.content .title{
  margin: 35rpx 0 0 20rpx;/*上右下左*/
}

.content .title>text{
  margin-left: 20rpx;
  font-size: 28rpx;
}

.show{
  width: 100%;
  height: 280rpx;
  display: flex;
  white-space: nowrap;
}

.show .item{
  margin:20rpx 20rpx 20rpx 20rpx;
  width: 30%;
  height: 180rpx;
  text-align: center;
  display: inline-block;
}

.item .tip{
  width: 100%;
  height: 100%;
}

.item>text{
  font-size: 24rpx;
}

.tip>image{
  width: 100%;
  height: 100%;
}

.line{
  width: 45%;
  height: 6rpx;
  margin: 10rpx 0 0 10rpx;/*上右下左*/
  background: #ccc;
}

.tag{
  width: 100%;
  height: 280rpx;
  background: #fff;
  display: flex;
  flex-wrap: wrap;
  justify-content:space-evenly;
}

.tag .merchant{
  width: 100rpx;
  height: 100rpx;
  margin: 30rpx 30rpx 30rpx 30rpx;
}

.merchant>image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}