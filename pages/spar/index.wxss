/* pages/spar/index.wxss */
page{padding: 0;margin: 0;}
	.car_all {
    margin: 0 10rpx 0 10rpx;
    width: 98%;
    height: 100%;
    overflow: auto;
	}
	
	.car_img image {
    width: 100%;
    height: 120px;
	}
	.car_fle{
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    position: relative;
    top: -40px;
    padding: 0 25px;
    /* background-color: red; */
    padding-bottom: 14px;
    box-shadow: 3px 5px 9px -3px rgba(183, 183, 183, 0.5);
	}
	.car_biao{
    width: 80px;
    height: 80px;
    border-radius: 50%;
	     
	}
	.car_biao image{
    width: 100%;
    height: 100%;
	}
	.car_xian{
    width: 48%;
    height: 2px;
    background-color: #f6956c;
    margin: 10px 0;
	}
	.car_text{
    text-align: center;
    line-height: 26px;
	}
  .car_text>text{
    font-size: 28rpx;
  }
	.car_flex{
    display: flex;
    flex-wrap: wrap;
    margin: 0 25px 15rpx 25px;
    padding: 0 1px;
  }
  .car_flex text{
    font-size: 28rpx;
  }
	.car_flex>view{
    width:fit-content;
    width:-webkit-fit-content;
    width:-moz-fit-content;
    height: 1.8rem;
    margin: 0 2rpx 2rpx 0;
    padding:0 20rpx 0 20rpx;/*上右下左*/
    background-color: #f2f2f2;
    border-radius: 5px;
	}
	.car_scr{
    display: flex;
    align-items: center;
    justify-content: center;
    width: 50px;
	}
	.car_scr>view{
    width: 10px;
    height: 10px;
    background-color: white;
    border-radius: 50%;
    margin: 0 3px;
	}