/* pages/vip/index.wxss */
.banner{
  width: 100%;
  height: 25vh;
}

.banner>image{
  width: 100%;
  height: 100%;
}

.content{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
 
}

.item{
  width: 50%;
  height: 180rpx;
  display: flex;
  align-items: center;
  position: relative;
  background: #fff;
  box-sizing: border-box;
  border-top: 1px solid #d5d5d5;
}
.item:nth-child(odd){
  border-right: 1px solid #d5d5d5
}
.item:nth-child(1),.item:nth-child(2){border-top:none;}

.item .tag{
  width: 100%;
  margin-top: -40rpx;
}

.tag>.up{
  margin-left: 20rpx;
  display: flex;
  justify-content: column;
  font-size: 28rpx;
  font-weight: bolder;
}

.tag>.down{
  margin: 10rpx 10rpx 0 60rpx;
  font-size: 20rpx;
  font-weight: bolder;
  color: #efb97c;
  width:fit-content;
  width:-webkit-fit-content;
  width:-moz-fit-content;
  background: #f5e3b1;
}

.down>text{
  margin: 0 10rpx 0 10rpx;
}

.up>image{
  width: 35rpx;
  height: 30rpx;
  margin-right: 10rpx;
}

.item .pic{
  position: absolute;
  width: 40%;
  height: 40%;
  top: 36%;
  right: 20rpx;
}

.pic>image{
  width: 100%;
  height: 100%;
}